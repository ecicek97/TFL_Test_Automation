{
  "name": "tfl-journey-planner-automation",
  "version": "1.0.0",
  "description": "Test automation framework for TfL Journey Planner widget - Senior QA STA Coding Challenge",
  "scripts": {
    "test": "npx cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --format progress",
    "test:headed": "HEADLESS=false npx cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --format progress",
    "test:report": "npx cucumber-js --require-module ts-node/register --require 'step-definitions/**/*.ts' --require 'support/**/*.ts' --format json:reports/cucumber-report.json --format html:reports/cucumber-report.html"
  },
  "keywords": [
    "tfl",
    "journey-planner",
    "playwright",
    "cucumber",
    "gherkin",
    "test-automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.0",
    "dotenv": "^16.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
